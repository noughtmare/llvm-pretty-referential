sem BlockLabel [ | | res :: {R.BasicBlock} ]
  | Named loc.res = @lhs.namedLabEnv Map.! @loc.copy
  | Anon loc.res = @lhs.anonLabEnv !! @number

sem Ident [ | | res :: {R.IdentValue}  ]
  | Ident loc.res = @lhs.identEnv Map.! (Ident @name)

